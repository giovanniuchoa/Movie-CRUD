@using Movie_CRUD.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<MovieModel>
@{
    ViewData["Title"] = "Home";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // Mostrar a modal e desativar a rolagem na página principal
        $(".btn-add").on("click", function () {
            $("body").addClass("modal-open");
            $("#movieModal").show();
        });

        // Fechar a modal e reativar a rolagem na página principal
        $(".close, #movieModal").on("click", function (event) {
            if ($(event.target).is(".close") || $(event.target).is("#movieModal")) {
                $("body").removeClass("modal-open");
                $("#movieModal").hide();
            }
        });

        // Envio do formulário (opcional)
        $("#movieForm").on("submit", function (event) {
            event.preventDefault();
            var name = $('#name').val();
            var category = $('#category').val();
            var year = $('#year').val();
            var duration = $('#duration').val();
            var url = `/Home/CreateConfirm?movieName=${name}&movieCategory=${category}&movieYear=${year}&movieDuration=${duration}`;
            $(this).attr('href', url);
            window.location.href = url;
        });





        // Mostrar a modal e desativar a rolagem na página principal
        $(".btn-edit").on("click", function () {
            $("body").addClass("modal-open");
            $("#movieModalEdit").show();
        });

        // Fechar a modal e reativar a rolagem na página principal
        $(".close, #movieModalEdit").on("click", function (event) {
            if ($(event.target).is(".close") || $(event.target).is("#movieModalEdit")) {
                $("body").removeClass("modal-open");
                $("#movieModalEdit").hide();
            }
        });

        // Envio do formulário (opcional)
        $("#movieFormEdit").on("submit", function (event) {
            event.preventDefault();
            var name = $('#nameEdit').val();
            var category = $('#categoryEdit').val();
            var year = $('#yearEdit').val();
            var duration = $('#durationEdit').val();
            var url = `/Home/CreateConfirm?movieName=${name}&movieCategory=${category}&movieYear=${year}&movieDuration=${duration}`;
            $(this).attr('href', url);
            window.location.href = url;
        });


    });

</script>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <nav>
        <h1>Movies</h1>
    </nav>

    <div class="container">
        <div class="actions">
            <input type="text" placeholder="Search...">
            <button class="btn-add"><i class="fas fa-plus"></i> Add Movie</button>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Year</th>
                    <th>Duration</th>
                </tr>
            </thead>
            <tbody>


                @if (Model != null && Model.Any())
                {
                    foreach (MovieModel movie in Model)
                    {

                        <tr>



                            <td>
                                <button class="btn-edit"><i class="fas fa-edit"></i></button>
                                <a class="btn-delete" role="button" asp-route-idMovie="@movie.idMovie" asp-controller="Home" asp-action="DeleteConfirm"><i class="fas fa-trash-alt"></i></a>
                            </td>

                            <td>@movie.idMovie</td>
                            <td>@movie.movieName</td>
                            <td>@movie.movieCategory</td>
                            <td>@movie.movieYear</td>
                            <td>@movie.movieDuration min</td>

                        </tr>

                    }
                }

                <!-- Outras linhas aqui -->
            </tbody>
        </table>
    </div>

    <!-- Modal de Cadastro de Filme -->
    <div id="movieModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Add New Movie</h2>
            <form id="movieForm">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>

                <label for="category">Category:</label>
                <input type="text" id="category" name="category" required>

                <label for="year">Year:</label>
                <input type="number" id="year" name="year" required>

                <label for="duration">Duration (min):</label>
                <input type="number" id="duration" name="duration" required>

                <button id="addMovieLink" class="btn-submit" >Add Movie</button>

            </form>
        </div>
    </div>

    <!-- Modal de Editar Filme -->
    <div id="movieModalEdit" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Edit Movie</h2>
            <form id="movieFormEdit">
                <label for="nameEdit">Name:</label>
                <input type="text" id="nameEdit" name="nameEdit" required>

                <label for="categoryEdit">Category:</label>
                <input type="text" id="categoryEdit" name="categoryEdit" required>

                <label for="yearEdit">Year:</label>
                <input type="number" id="yearEdit" name="yearEdit" required>

                <label for="durationEdit">Duration (min):</label>
                <input type="number" id="durationEdit" name="durationEdit" required>

                <button id="editMovieLink" class="btn-submit">Add Movie</button>

            </form>
        </div>
    </div>


</body>
</html>


<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    nav {
        background-color: #333;
        color: #fff;
        padding: 15px;
        text-align: center;
    }

    .container {
        width: 80%;
        margin: 20px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .actions {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

        .actions input[type="text"] {
            padding: 10px;
            width: 70%;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .actions .btn-add {
            padding: 10px 15px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

            .actions .btn-add i {
                margin-right: 5px;
            }

    table {
        width: 100%;
        border-collapse: collapse;
    }

        table th, table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        table th {
            background-color: #f2f2f2;
        }

        table tbody tr:hover {
            background-color: #f9f9f9;
        }

    .btn-edit, .btn-delete {
        background: none;
        border: none;
        cursor: pointer;
    }

    .btn-edit {
        color: #007bff;
        margin-right: 10px;
    }

    .btn-delete {
        color: #dc3545;
    }


    /* Modal Styling */
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 40%;
        border-radius: 8px;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

        .close:hover,
        .close:focus {
            color: #000;
            text-decoration: none;
            cursor: pointer;
        }

    .modal form {
        display: flex;
        flex-direction: column;
    }

        .modal form label {
            margin-top: 10px;
        }

        .modal form input {
            padding: 10px;
            margin-top: 5px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

    .btn-submit {
        padding: 10px;
        margin-top: 20px;
        background-color: #28a745;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    body.modal-open {
        overflow: hidden;
    }


</style>
